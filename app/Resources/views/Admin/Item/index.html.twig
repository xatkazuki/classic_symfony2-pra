{% extends "Admin/layout.html.twig" %}

{% block title %}商品登録{% endblock %}

{% block body %}

    <div>

        {{ today_time }}

        {{ form_start(form) }}

        <dl>
            <dt>商品名</dt>
            <dd>
                {{ form_widget(form.name, {"attr":{"class":"form-control"}}) }}
                {{ form_errors(form.name) }}
            </dd>
            <dt>注意書き</dt>
            <dd>
                {{ form_widget(form.note, {"attr":{"class":"form-control"}}) }}
                {{ form_errors(form.note) }}
            </dd>
            <dt>商品説明</dt>
            <dd>
                {{ form_widget(form.discription_detail, {"attr":{"class":"form-control"}}) }}
                {{ form_errors(form.discription_detail) }}
            </dd>
            <dt>備考欄</dt>
            <dd>
                {{ form_widget(form.free_area, {"attr":{"class":"form-control"}}) }}
                {{ form_errors(form.free_area) }}
            </dd>
            <dt>フラグ</dt>
            <dd>
                {{ form_widget(form.del_flg, {"attr":{"class":"form-control"}}) }}
                {{ form_errors(form.del_flg) }}
            </dd>

        </dl>

        <div>
            {{ form_widget(form.submit, {"attr":{"class":"btn btn-primary"}}) }}
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}